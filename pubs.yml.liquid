{% for post in site.posts | limit:30 %}
- title: "{{ post.title }}"
  pub: "{{ post.meta.publication }}"
  date: {{ post.date | date: "%F" }}
  link: "{{ post.permalink }}"
  summary: |
    "{{ post.excerpt | strip_html | rstrip}}"
  tags:{% for tag in post.taxonomy.tags %}
    - {{ tag.value | rstrip }}{% endfor %}{% endfor %}
