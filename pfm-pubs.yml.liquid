{% for post in site.posts %}
{% if post.taxonomy.tags contains 'public-financial-management' %}
- title: |
    {{ post.title | strip_html | strip_newlines }}
  pub: "{{ post.meta.publication }}"
  date: {{ post.date | date: "%F" }}
  link: "{{ post.permalink }}"
  summary: |
    {{ post.excerpt | strip_html | strip_newlines }}
  tags:{% for tag in post.taxonomy.tags %}
    - {{ tag.value | rstrip }}{% endfor %}{% endif %}{% endfor %}
